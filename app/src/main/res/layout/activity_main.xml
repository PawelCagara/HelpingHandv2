<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loginButton"
        android:layout_width="192dp"
        android:layout_height="51dp"
        android:layout_marginBottom="111dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/homeText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginBottom="87dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText3" />

    <TextView
        android:id="@+id/homeText3"
        android:layout_width="191dp"
        android:layout_height="37dp"
        android:layout_marginBottom="57dp"
        android:text="Don't have an account?"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <TextView
        android:id="@+id/homeText"
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="94dp"
        android:text="Wellcome to our HelpingHand app"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>